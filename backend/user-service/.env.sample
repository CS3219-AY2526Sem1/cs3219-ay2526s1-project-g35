# Database Configuration
DB_CLOUD_URI=<CONNECTION_STRING>
DB_LOCAL_URI=mongodb://127.0.0.1:27017/<db_name>
DB_TEST_URI=mongodb://127.0.0.1:27017/<db_name>

# Server Configuration
PORT=3001
NODE_ENV=development

# Environment Selection
# Will use cloud MongoDB Atlas database if PROD, local if development
ENV=PROD

# JWT Configuration
JWT_SECRET=you-can-replace-this-with-your-own-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/peerprep

# Security Configuration
# Argon2id Configuration (recommended for password hashing)
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# Legacy (if needed for backward compatibility)
BCRYPT_SALT_ROUNDS=12

# Feature Flags
INCLUDE_REFRESH_IN_RESPONSE=false
ENABLE_SOFT_DELETE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Test Configuration
TEST_PORT=3002
