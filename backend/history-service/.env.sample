# Server Configuration
PORT=8004
NODE_ENV=development

# Google Cloud Configuration
# Required when USE_SECRET_MANAGER=true
GCP_PROJECT_ID=your-gcp-project-id
USE_SECRET_MANAGER=false

# PostgreSQL Configuration (for local development)
# When USE_SECRET_MANAGER=false, these are used
# In production with Secret Manager, DB_CONNECTION_STRING is loaded from secrets
DB_HOST=localhost
DB_PORT=5432
DB_NAME=historydb
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_DIALECT=postgres

# JWT Configuration (for authentication verification)
# In production, this should be loaded from Secret Manager
JWT_SECRET=your-jwt-secret-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
